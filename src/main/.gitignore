CREATE DATABASE elfs;

USE elfs;

CREATE TABLE camisas (
   id BIGINT NOT NULL AUTO_INCREMENT,
   nome VARCHAR(255),
   preco DECIMAL(19, 2),
   tamanho VARCHAR(255),
   time VARCHAR(255),
   tipo_id BIGINT,
   PRIMARY KEY (id)
);

CREATE TABLE pagamentos (
   id BIGINT NOT NULL AUTO_INCREMENT,
   data DATE,
   valor DOUBLE PRECISION,
   usuario_id BIGINT,
   PRIMARY KEY (id),
   FOREIGN KEY (usuario_id) REFERENCES usuarios(id)
);

CREATE TABLE tipos (
   id BIGINT NOT NULL AUTO_INCREMENT,
   nome VARCHAR(255),
   PRIMARY KEY (id)
);

CREATE TABLE usuarios (
   id BIGINT NOT NULL AUTO_INCREMENT,
   statuslogado BIT,
   usuario VARCHAR(255),
   senha VARCHAR(255),
   PRIMARY KEY (id)
);
